<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="notification" class="az.spring.demo.Notification">
        <!--   <property name="message" ref="email"/> Set injection zamani istifade olunur-->

        <constructor-arg ref="employee"/>
        <property name="message" ref="sms"/>

    </bean>

    <bean id="sms" class="az.spring.demo.Sms"/>
    <bean id="email" class="az.spring.demo.Email"/>
    <bean id="employee" class="az.spring.demo.Employee">
        <!--                <constructor-arg value="Tabriz"/> &lt;!&ndash;eger constructor injection olsaydi bu formada deyerleri oturecekdik-->
        <!--                <constructor-arg value="Tabriz" type="java.lang.String"/>  &lt;!&ndash;eger bir nece constructor varsa ve biz hansisa constructora uygun parametrleri veririkse o zaman type elave edib tipini qeyd etmek lazimdir.-->
        <!--        <property name="name" value="Tabriz"/>-->
        <!--        <property name="surname" value="Guliyev"/>-->
        <property name="age" value="28"/>
        <property name="salary" value="1313"/>

        <property name="device">
            <!--            <list>-->
            <!--                &lt;!&ndash;                <value>Android</value>&ndash;&gt;-->
            <!--                &lt;!&ndash;                <value>IOS</value>&ndash;&gt;-->
            <!--                <ref bean="deviceAndroid"/>-->
            <!--                <ref bean="deviceIOS"/>-->
            <!--            </list> &lt;!&ndash;eger list olarsa obyektin tipi&ndash;&gt;-->
            <set> <!-- list yox set tipinde olarsa obyekt -->
                <ref bean="deviceIOS"/>
                <ref bean="deviceAndroid"/>
                <bean class="az.spring.demo.Device"> <!--burda ise bir basa bean daxilde yaradilib oturulur, yaxsi olardiki kenarda yaradilib iceriye oturulsun. cunki propertini sisirdib daha oxunaqsiz hala getirir. Ona gore de kenarda yaradib referansin istifade elemek daha oxunaqli hala getirer-->
                    <property name="name" value="Other"/>
                    <property name="version" value="1.0.0"/>
                </bean>
            </set>
        </property>
        <property name="deviceMap">
            <map> <!-- eger obyektin tipi map olarsa-->
                <entry key="android">
                    <!--                    <value>fjldsjflij</value> &lt;!&ndash;eger Stringdise her hansi bir value deyer ala bilen tipdise&ndash;&gt;-->
                    <ref bean="deviceIOS"/>
                </entry>
                <entry key="IOS">
                    <ref bean="deviceAndroid"/>
                </entry>
            </map>
        </property>

        <property name="databaseProperties">
            <props>
                <prop key="url">jdbc:mysql://localhost:3306/mydb</prop>
                <prop key="username">root</prop>
                <prop key="password">12345</prop>
            </props>
        </property>


    </bean>

    <bean id="deviceAndroid" class="az.spring.demo.Device">
        <property name="name" value="Android"/>
        <property name="version" value="v9.10"/>
    </bean>

    <bean id="deviceIOS" class="az.spring.demo.Device">
        <property name="name" value="IOS"/>
        <property name="version" value="v9.10"/>
    </bean>


</beans>